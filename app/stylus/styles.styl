/**************************************
 *               IMPORTS              *
 **************************************
 */

/* Dependencies */
@import "normalize" // Normalize v3.0.3
@import "nib"       // nib v1.1.0

/* Custom files */
@import "icons" // Custom Icons



/**************************************
 *              SETTINGS              *
 **************************************
 */

/* Colors */
$primary_color    = #3498db
$secondary_color  = #09588c
$tertiary_color   = #808080
$background_color = #ecf0f1
$light_text_color = #8a8787
$dark_text_color  = #000000


/**************************************
 *               TOOLS                *
 **************************************
 */

/* Mixins */
animate_element(name, time)
  animation-name name
  animation-duration time
  animation-iteration-count infinite
smooth_transition(time)
  transition all time ease-in-out



/**************************************
 *             GENERIC                *
 **************************************
 */

/* Box-sizing */
*
  box-sizing border-box
  margin 0
  padding 0

/* List */
li
  list-style none

/* Others */
a
  text-decoration none
body
  background $background_color
  overflow-x hidden
h1
  margin 0



/**************************************
 *             OBJECTS                *
 **************************************
 */

/* Wrappers
 */
.Wrapper
  width 100%
  height 100%



/**************************************
 *            COMPONENTS              *
 **************************************
 */

/* Header */
.Header
  background $primary_color
  display flex
  height 3em
  justify-content space-between
  flex-direction: row-reverse
  padding .5em 0em
  smooth_transition(300ms)
  width 100%
.Header__button
  display flex
  height 2em
  margin-left 1em
  position relative
  smooth_transition(300ms)
  width 2.2em
.Header__button__line
  background white
  border-radius 1px
  cursor pointer
  height 4px
  left 0.1em
  position absolute
  smooth_transition(300ms)
  width 30px
  &#span1
    top .2em
  &#span2
    top .8em
  &#span3
    top 1.4em
.Header__page-title
  color white
  font-size 1.8em
  margin-right 1em
  padding-left 0em
  smooth_transition(300ms)
.Header__site-title
  display none
.Header__user
  display none

/* Nav menu */
.Menu
  background $secondary_color
  border-right 3px solid $secondary_color
  height 100%
  left -50%
  top 0
  position fixed
  smooth_transition(300ms)
  width 50%
.Menu__title
  height 3em
  padding .5em
  text-align center
.Menu__title__text
  color white
  cursor pointer
  font-size 1.8em
  user-select none
  &--mod
    color $primary_color
.Menu__item
  border-top 1px solid white
  height 3em
  padding-top 1em
  text-align center
  &:hover, &.Active
    background $primary_color
.Menu__link
  color white
  user-select none

/* Content */
.Wrapper
  position absolute
  right 0
  smooth_transition(300ms)
  top 0
  &.Move // Show Menu
    right -50%
    .Header__button
      margin 0 35%
    #span1
      top .55em
      transform rotate(-45deg)
      width 1em
    #span2
      left .4em
    #span3
      top 1.1em
      transform rotate(45deg)
      width 1em
    .Menu
      left 0



/* Footer */
.Footer
  display none



/**************************************
 *               PAGES                *
 **************************************
 */
/* Page Container */
.Content
  display flex
  flex-direction column

/* Player page */
.Player
  display none
.Player__controls
  display flex
  justify-content space-between
  margin 0 auto
  width 80%
.Player__controls__icon
  color $tertiary_color
  font-size 2.5em
  cursor pointer
  &.Active
    color $primary_color
    cursor pointer
    font-size 2.5em
.Player__cover
  width 100%
  margin 0
.Player__cover__image
  width 100%
.Player__info
  margin .5em
  text-align center
.Player__info__text
  margin .5em 0
.Player__progress-bar
  background $tertiary_color
  border-radius 5px
  cursor pointer
  height .4em
  margin 1em auto
  width 90%
.Player__progress-bar__current-progress
  animate_element(player_progress, 5s)
  background $primary_color
  height 100%
  position relative
.Player__progress-bar__dot
  animate_element(player_pulse, 1s)
  background $secondary_color
  border-radius 50%
  height 1em
  position absolute
  right 0
  top -.25em
  width 1em

/* Player Animations */
@keyframes player_progress
  from
    width 0%
  to
    width 100%
@keyframes player_pulse
  from
    opacity 1
    height 1em
    top -0.25em
    width 1em
  to
    height 2em
    opacity .0
    top -.75em
    width 2em

/*Playlist page*/
.Playlist
  display block
.Playlist__item
  background rgba(black, .7)
  display flex
  justify-content stretch
  height 5em
  margin 0 .2em
  overflow hidden
  text-align center
  &:nth-child(odd)
    background rgba(black, .6)
.Playlist__item__cover
  margin 0
  height 100%
  width auto
.Playlist__item__image
  height 100%
.Playlist__item__info
  padding-left .3em
  flex-grow 1
.Playlist__item__text
  font-size 1em
  color rgba(white, .8)
  &--artist, &--album
    color rgba(white, .5)
    font-size .8em
