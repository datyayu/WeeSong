.Series__info__text
  display none
  
.Series__info__cover
  height 180vw
  width 100vw
  position fixed
  transition all 300ms ease-in-out
  top 0
  left 0
  z-index -1
  
.Series__info__image
  width 100%
  height 100%
  
.Series__info__text
  display none
  text-align center
  margin-top .5em
  &--title
    font-size 2em
    color $dark_text
  &--season, &--episodes
    color $light_text
  &--link
    color $primary_color

.Move-right
  .Series__info__cover
    left 50%
  

@media screen and (orientation: landscape)
  .Series__info__cover
    height auto
    

@media screen and (min-width: $query_large)
  .Series__info
    display flex
    flex-direction column
    width 60%
    border-right 1px solid $secondary_color
    margin .5em 0
    
  .Series__info__cover
    position static
    margin 0 auto
    margin-top .5em
    height 40vh
    width 26.66vh
    max-width 90%

  .Series__info__text
    display block