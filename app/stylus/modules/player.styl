/* Mobile-first view */
// Controls
  .Player__controls
    display flex
    justify-content space-between
    margin 0 auto
    width 80%
    
  .Player__controls__icon
    color $secondary_color
    cursor pointer
    font-size 2.5em
    &.Active
      color $primary_color
      cursor pointer
      font-size 2.5em

// Cover
  .Player__cover
    margin 1em auto
    width 80%

  .Player__cover__image
    width 100%

// Song Info
  .Player__info
    margin .5em
    text-align center
  
  .Player__info__text
    color $dark_text
    margin .5em 0
    word-break keep-all
  
// Progress range bar
  .Player__progress-bar
    background $secondary_color
    border-radius 5px
    cursor pointer
    height .4em
    margin .5em auto
    margin-top 1em 
    width 85%
    
  .Player__progress-bar__current-progress
    background $primary_color
    border-radius 5px
    height 100%
    position relative
    width 0%
    
  .Player__progress-bar__dot
    background $tertiary_color
    border-radius 50%
    height 1em
    position absolute
    right -.2em
    top -.25em
    width 1em
    
  .Player__progress-time
    color $light_text
    margin .5em
    text-align center



/* Tablet  View*/
  @media screen and (min-width: $query_medium)
    .Player__controls__icon
      font-size 5em
      &.Active
        font-size 5em
        
    .Player__info__text
      font-size 1.5em
      
    .Player__progress-bar
      height .7em
      
    .Player__progress-bar__dot
      height 2em
      top -.65em
      width 2em
      
    .Player__progress-time
      font-size 1.5em
      margin-bottom 1em



/* Desktop View */
  @media screen and (min-width: $query_large)
    .Player
      margin 1em
      padding 0 5%
      width 40%
      border-right 1px solid $secondary_color
    .Player__cover
      width 300px  
      height auto
      
      max-width 90%
    .Player__info__text
      margin .1em
    .Player__text
      &--title
        font-size 1.2em
      &--artist, &--album
        font-size 1em
        color $light_text
    .Player__progress-bar
      width 100%
      height .5em
      margin 0
    .Player__progress-bar__dot
      width 1em
      height 1em
      top -.25em
    .Player__progress-time
      font-size 1.1em
    .Player__controls
      position absolute
      top 2em
      right 4.5%
      width 53%
      justify-content space-around
      font-size .5em   
      padding-bottom 3em
      border-bottom 1px solid $secondary_color
     