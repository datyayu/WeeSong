/* Mobile-first view */
// Controls
  .Player__controls
    display flex
    justify-content space-between
    margin 0 auto
    width 80%
    
  .Player__controls__icon
    color $secondary_color
    cursor pointer
    font-size 2.5em
    &.Active
      color $primary_color
      cursor pointer
      font-size 2.5em

// Cover
  .Player__cover
    margin 1em auto
    width 80%

  .Player__cover__image
    width 100%

// Song Info
  .Player__info
    margin .5em
    text-align center
  
  .Player__info__text
    color $dark_text
    margin .5em 0
  
// Progress range bar
  .Player__progress-bar
    background $secondary_color
    border-radius 5px
    cursor pointer
    height .4em
    margin .5em auto
    margin-top 1em 
    width 85%
    
  .Player__progress-bar__current-progress
    background $primary_color
    border-radius 5px
    height 100%
    position relative
    width 0%
    
  .Player__progress-bar__dot
    background $tertiary_color
    border-radius 50%
    height 1em
    position absolute
    right -.2em
    top -.25em
    width 1em
    
  .Player__progress-time
    color $light_text
    margin .5em
    text-align center



/* Tablet  View*/
  @media screen and (min-width: $query_medium)
    .Player__controls__icon
      font-size 5em
      &.Active
        font-size 5em
        
    .Player__info__text
      font-size 1.5em
      
    .Player__progress-bar
      height .7em
      
    .Player__progress-bar__dot
      height 2em
      top -.65em
      width 2em
      
    .Player__progress-time
      font-size 1.5em
      margin-bottom 1em