/* Mobile-first view */
  .Header
    background $primary_color
    display flex
    height 3em
    justify-content space-between
    flex-direction row
    padding .5em 0em
    transition all 300ms ease-in-out
    width 100%
    
  .Header__button-menu,
  .Header__button-playlist
    cursor pointer
    display flex
    height 2em
    margin .3em 1em
    position relative
    transition all 300ms ease-in-out
    user-select none
  .Header__button-menu
    width 2.2em
  .Header__button-playlist
    display flex
    padding-right 2em
    width 5em
  
  .Header__button__text
    color white
    transition all 300ms ease-in-out
  .right-triangule
    content ""
    border 13px solid transparent
    border-left 10px solid white
    right -1em
    top 0
    transition all 100ms ease-in-out
    position absolute

  .Header__button__line
    background white
    border-radius 1px
    height 4px
    left 0.1em
    position absolute
    transition all 300ms ease-in-out
    width 30px
    &:nth-child(1)
      top .2em
    &:nth-child(2)
      top .8em
    &:nth-child(3)
      top 1.4em
      
  .Header__page-title
    color white
    font-size 1.5em
    overflow hidden 
    padding-left .5em
    text-align center
    text-overflow ellipsis
    transition all 300ms ease-in-out
    white-space nowrap
    width 80%
    
  .Header__site-title
    color $secondary_color
    &--mod
      color $primary_color
    display none
    
  .Header__user
    align-items center
    display none
    justify-content flex-end
    width 40%
  
  .Header__user__username
    color $dark_text

  .Header__user__button
    border-right 13px solid transparent
    border-left 13px solid transparent
    border-top 10px solid $light_text
    cursor pointer
    margin 0 .5em

  .Header__user__image
    border-radius 50%
    height 100%   
    width 100%   

  .Header__user__image-container
    height 50px
    margin 0 1em
    padding 0
    width 50px
    
  .Move-right
    .Header__button
      margin 0 35%
    #spanA
      top .55em
      transform rotate(-45deg)
      width 1em
    #spanB
      left .4em
    #spanC
      top 1.1em
      transform rotate(45deg)
      width 1em
  .Move-left
    .Header
      padding-right 30%
    .Header__button__text
      color white
      padding-left 2em
    .right-triangule
      content ""
      border 13px solid transparent
      border-right 10px solid white
      right 60%
      
    



/* Tablet  View*/
  @media screen and (min-width: $query_medium)
    .Header
      height 4em
      padding-top .1em
      
    .Header__button
      height 4em
      transition all 300ms ease-in-out
      width 2.2em
      
    .Header__button__line
      height 7px
      width 50px
      &#span1
        top .2em
      &#span2
        top 1.2em
      &#span3
        top 2.2em
        
    .Header__page-title
      font-size 2.3em



/* Desktop View*/
  @media screen and (min-width: $query_large)
    .Header
      background white
      border-bottom 1px solid $secondary_color
      flex-direction row
      height 5em
      padding  1.3em 15%
    
    .Header__site-title
      display block
      
    .Header__user
      display flex
    
    .Header__page-title
      display none
    
    .Header__button
      display none
