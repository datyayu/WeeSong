.Series-list__list
  display flex
  width 100%
  margin 0
  flex-wrap wrap
  justify-content space-between
.Series-list__item
  cursor pointer
  user-select none
  width 33%
  margin 0
  padding 0
.Series-list__item__cover
  margin 0
  height 100%
  width 100%
  position relative
.Series-list__item__cover__image
  width 100%
  height 100%
.Series-list__item__title
  background rgba(black,.5) 
  bottom 0em 
  color rgba(white, .9)
  display flex
  height 3em
  width 100%
  justify-content center
  margin-bottom .25em
  position absolute
  text-overflow ellipsis
  overflow hidden
  text-align center
