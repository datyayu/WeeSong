.Series-list__list
  display flex
  margin 0
  flex-direction column
  width 100%
.Series-list__item
  cursor pointer
  height 3em
  margin .5em
  user-select none
  width 100%
.Series-list__item__cover
  margin 0
  height 100%
  width 100%
  position relative
.Series-list__item__cover__image
  width 100%
  height 100%
.Series-list__item__title
  background rgba(black,.5) 
  bottom 0em 
  color rgba(white, .9)
  display flex
  flex-direction column
  justify-content center
  height 3em
  position absolute
  text-overflow ellipsis
  overflow hidden
  text-align center
  width 100%
