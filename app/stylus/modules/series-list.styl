.Series-list__index
  background $tertiary_color
  box-sizing content-box
  display flex
  width 100%
  justify-content space-around
  height 1.5em
.Series-list__index__item
  cursor pointer
  user-select none
  display  inline
  
.Series-list__index__item__link
  color white
.Series-list__index__item__link--dead
  color $secondary_color
.Series-list__list
  width 100%
  display flex
  flex-flow row wrap
.Series-list__item
  cursor pointer
  user-select none
  width 50vw
  height 75vw
.Series-list__item__cover
  height 100%
  width 100%
  position relative
.Series-list__item__cover__image
  width 100%
  height 100%
.Series-list__item__title
  background rgba(black,.5) 
  display flex
  flex-flow column wrap
  justify-content center
  bottom 0em 
  color rgba(white, .9)
  height 3em
  position absolute
  text-overflow ellipsis
  overflow hidden
  text-align center
  width 100%
