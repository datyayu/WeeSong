/* Mobile-first view */
  .Playlist
    background rgba(black, .7)
    width 100%
    height 100%
  .Playlist__item
    background rgba(black, .5)
    display flex
    justify-content stretch
    height 5em
    overflow hidden
    text-align center
    width 100%
    &:nth-child(odd)
      background rgba(black, .7)
    &.Playing
      background rgba($primary_color, .8)

  .Playlist__item__cover
    height 100%
    margin 0
    width auto

  .Playlist__item__image
    height 100%

  .Playlist__item__info
    flex-grow 1
    padding-left .3em
    padding-top .7em

  .Playlist__item__text
    color rgba(white, .8)
    font-size 1em
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    &--artist, &--album
      color rgba(white, .5)
      font-size .8em



/* Tablet  View*/
  @media screen and (min-width: $query_medium)
    .Playlist__item
      height 8em

    .Playlist__item__info
      padding-top 1em

    .Playlist__item__text
      font-size 1.6em
