.Playlists-list__list
  height 100%
  width 100%
  
.Playlists-list__item
  cursor pointer
  display flex
  height 5em
  margin 1em
  background rgba($secondary_color, .8)
  
.Playlists-list__item__cover
  height 100%
  margin 0
  margin-right .5em
  
.Playlists-list__item__cover__image
  height 100%
  max-width 5em
  
.Playlists-list__item__title
  align-items center
  color white
  display flex
  flex 1
  justify-content center
  text-overflow ellipsis
  overflow hidden
  text-align center

.Playlists-list__item__info
  display none



/* Tablet  View*/
  @media screen and (min-width: $query_medium)
    .Playlists-list__item
      height 8em

    .Playlists-list__item__title
      font-size 2em
    
    .Playlists-list__item__cover__image
      max-width 8em



/* Desktop View*/
  @media screen and (min-width: $query_large)
    .Playlists-list__list
      margin 0 auto
      display flex
      flex-wrap wrap
      justify-content center
      max-height 75vh
      overflow-y auto
    .Playlists-list__item
      fdisplay block
      width 14em
      height 14em
      position relative
      margin .4em
    .Playlists-list__item__cover
      margin 0
      width 100%
      height 100%
    .Playlists-list__item__cover__image
      max-width 100%
      width 100%
      height 100%
    .Playlists-list__item__title
      color white
      font-size 1em
      position absolute
      left 0
      bottom 0
      background rgba(black, 0.5)
      width 100%
      height 3em
    
      
      
      

