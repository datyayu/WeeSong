/* Wrappers */
// Mobile-first View
  .Content
    display flex
    height 100%
    flex-direction column
  
  .Wrapper
    position relative
    right 0
    top 0
    transition all 300ms ease-in-out
    height 100%
    width 100%
    &.Move-right
      right -50%
      .Content-blocker
          right 0
    &.Move-left
      right 50%
      .Content-blocker
          left 0

  
  .Content-blocker
    opacity 0
    transition all 300ms ease-in-out
    width 100%
    &.Active
      position fixed
      top 0em
      opacity 1
      height 100vh
      width 50%
      overflow-y hidden
      background rgba(black,.4)
  
  
// Desktop view
  @media screen and (min-width: $query_large)
    .Content
      flex-direction row
      justify-content space-around
      position relative
      width 90%
      margin 0 auto
    .Wrapper
      &.Move-right
        right 0
      &.Move-left
        right 0
    .Content-blocker
      &.Active
        display none
